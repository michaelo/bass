{
    "jobname": {
        "repository": "file:///tmp/mypipeline",
        "ref": "main",
        "worker-tags": ["tag1", "tag2"],
        "exec": [
            "python3", "job.py"
        ],
        "poll": null,
        "x-webhook": {
            "msg-pattern": ".*",
            "x-ref-pattern": "main"
        }
    },
    "jobname2": {
        "repository": "file:///tmp/mypipeline2",
        "ref": "main",
        "exec": [
            "python3", "job.py"
        ],
        "tag-pattern": "v[0-9]+",
        "x-poll": {
            "interval": "1h"
        },
        "webhook": null
    },
    "bass-example1": {
        "repository": "git@github.com:michaelo/bass.git",
        "ref": "main",
        "cwd": "./testpipelines",
        "exec": [
            "python3", "job.py"
        ],
        "poll": null,
        "x-webhook": {
            "msg-pattern": ".*",
            "x-ref-pattern": "main"
        }
    },
    "bass-example-complex": {
        "repository": "git@github.com:michaelo/bass.git",
        "ref": "main",
        "cwd": "./testpipelines",
        "exec": [
            "python3", "job-complex.py"
        ]
    },
    "bass-example-simple": {
        "repository": "git@github.com:michaelo/bass.git",
        "ref": "main",
        "cwd": "./testpipelines",
        "exec": [
            "python3", "job-simple.py"
        ]
    },
    "bass-example-matches": {
        "repository": "git@github.com:michaelo/bass.git",
        "ref": "main",
        "cwd": "./testpipelines",
        "exec": ["python3", "job-changeset-matches.py"]
    },
    "bass-example-cwd": {
        "repository": "git@github.com:michaelo/bass.git",
        "ref": "main",
        "cwd": "./testpipelines",
        "exec": [
            "python3", "job-cwd.py"
        ]
    },
    "notification-test": {
        "repository": "git@github.com:michaelo/bass.git",
        "ref": "main",
        "cwd": "./testpipelines",
        "exec": ["python3", "job-simple.py"],
        "notifications": {
            "onFailure": {
                "email": {
                    "to": "me@michaelodden.com",
                    "subject": "Build $PIPELINE_NAME failed",
                    "body": "Build: $TRACEID failed"
                }
            },
            "onSuccess": {
                "email": {
                    "to": "me@michaelodden.com",
                    "subject": "Build $PIPELINE_NAME succeeded",
                    "body": "Build: $TRACEID succeeded <a href=\"$TRACEURL\"></a>"
                }
            }
        }
    },
    "setupteardown": {
        "repository": "git@github.com:michaelo/bass.git",
        "ref": "main",
        "cwd": "./testpipelines",
        "exec": [
            "python3", "job-conditional-steps.py"
        ]
    }
}